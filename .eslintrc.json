{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": ["airbnb-base"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": ["@typescript-eslint"],
    "rules": {
        "quotes": [2, "double", { "avoidEscape": true }],
        "semi": [2, "always", { "omitLastInOneLineBlock": true }]
    }
}
